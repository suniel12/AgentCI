name: AgentCI Checks

on:
  push:
    branches: [main, master]
  pull_request:
    branches: [main, master]

jobs:
  agentci-deterministic:
    name: Deterministic Logic Tests
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python {{ python_version }}
        uses: actions/setup-python@v5
        with:
          python-version: '{{ python_version }}'
          cache: 'pip'

      - name: Install dependencies
        run: |
          pip install --upgrade pip
          {% if dependency_file == 'requirements.txt' %}
          pip install -r requirements.txt
          {% elif dependency_file == 'pyproject.toml' %}
          pip install .
          {% endif %}
          # Ensure AgentCI is installed for tests
          pip install agentci

      - name: Run deterministic AgentCI tests
        # These always run — they use mocked tools and a mocked LLM client
        run: |
          pytest {{ test_path }} -v -m "not live" \
            --tb=short \
            2>&1 | tee agentci-test-results.txt
        env:
          # Mocked key — tests that need a real key will auto-skip
          ANTHROPIC_API_KEY: sk-ant-dummy-key-for-testing

      - name: Upload deterministic test results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: agentci-results-deterministic
          path: agentci-test-results.txt
          retention-days: 14

  agentci-llm-judge:
    name: LLM-as-Judge Evals
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python {{ python_version }}
        uses: actions/setup-python@v5
        with:
          python-version: '{{ python_version }}'
          cache: 'pip'

      - name: Install dependencies
        run: |
          pip install --upgrade pip
          {% if dependency_file == 'requirements.txt' %}
          pip install -r requirements.txt
          {% elif dependency_file == 'pyproject.toml' %}
          pip install .
          {% endif %}
          pip install agentci

      - name: Run LLM-as-judge tests
        # Only runs when the secret is available (will skip in external PRs)
        # Add ANTHROPIC_API_KEY to your GitHub repository secrets!
        if: env.ANTHROPIC_API_KEY != ''
        run: |
          pytest {{ test_path }} -v \
            --tb=short
        env:
          ANTHROPIC_API_KEY: {% raw %}${{ secrets.ANTHROPIC_API_KEY }}{% endraw %}
        continue-on-error: false  # Judge failures block the PR merge

  agentci-spec-evaluation:
    name: AgentCI v2 Spec Evaluation
    runs-on: ubuntu-latest
    # Requires spec to declare: runner: "myagent.run:run_agent"
    # If no runner is declared, this step exits 0 with instructions.
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python {{ python_version }}
        uses: actions/setup-python@v5
        with:
          python-version: '{{ python_version }}'
          cache: 'pip'

      - name: Install dependencies
        run: |
          pip install --upgrade pip
          {% if dependency_file == 'requirements.txt' %}
          pip install -r requirements.txt
          {% elif dependency_file == 'pyproject.toml' %}
          pip install .
          {% endif %}
          pip install agentci

      - name: Validate spec
        run: agentci validate agentci_spec.yaml

      - name: Run AgentCI evaluation
        # Annotations appear in PR "Files Changed" tab automatically
        run: |
          agentci test \
            --config agentci_spec.yaml \
            --format github \
            --workers 4
        env:
          ANTHROPIC_API_KEY: {% raw %}${{ secrets.ANTHROPIC_API_KEY }}{% endraw %}
          OPENAI_API_KEY: {% raw %}${{ secrets.OPENAI_API_KEY }}{% endraw %}

      - name: Export results JSON
        if: always()
        run: |
          agentci test \
            --config agentci_spec.yaml \
            --format json \
            --workers 4 > agentci-eval-results.json || true
        env:
          ANTHROPIC_API_KEY: {% raw %}${{ secrets.ANTHROPIC_API_KEY }}{% endraw %}
          OPENAI_API_KEY: {% raw %}${{ secrets.OPENAI_API_KEY }}{% endraw %}

      - name: Upload results artifact
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: agentci-eval-results
          path: agentci-eval-results.json
          retention-days: 30

